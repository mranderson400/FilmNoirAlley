@model Category

<div class="my-special-background"> <!-- Add special background class here -->
    <div class="container text-center w-75 mx-auto">
        <h1>New Category</h1>
        <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="NewProduct">Products</a>


        <!-- Insert the navbar here -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Product" asp-action="NewProduct">Productss</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Category" asp-action="CategoryNew">Categories</a>
                </li>
            </ul>
        </nav>
        <!-- Navbar ends -->

        <div class="d-flex row mt-5">
            <form method="POST" class="shadow p-3 rounded col-6" asp-controller="Category" asp-action="CreateCategory">
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name"></span>
                    <input asp-for="Name" class="form-control" type="text">
                </div>
                <button class="btn btn-success" type="submit">Add</button>
            </form>

            <div class='col-6'>
                <p class="text-center">All Categories</p>
                @foreach (Category category in ViewBag.allCategories)
                {
                    <p><a href="/category/@category.CategoryId">@category.Name</a></p>
                }
            </div>
        </div>
    </div>
</div>
